{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "endOfLine": "auto",
        "semi": true,
        "printWidth": 120
      }
    ],
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "no-console": "error"
  }
}
